#include <stdio.h>
 
int main(){
    int combustivel, alc = 0, gas = 0, die = 0;
    while(1){
    scanf("%d", &combustivel);

    if(combustivel == 4){
      break;
    }else{
        if(combustivel == 1){
            alc++;
        }else if(combustivel == 2){
                gas++;
            }else if(combustivel == 3){
                die++;
            }else continue;
    }
    }
    printf("MUITO OBRIGADO\n");
    printf("Alcool: %d\n", alc);
    printf("Gasolina: %d\n", gas);
    printf("Diesel: %d\n", die);
return 0;
system("pause");

}
