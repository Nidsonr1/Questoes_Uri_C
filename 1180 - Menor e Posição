#include <stdio.h>
int main(){
    int menor = 1000, pos, j, n, cont, vetor[1000], val;
    scanf("%d", &n);
    for(cont = 0; cont < n; cont++){
        scanf("%d", &val);
        vetor[cont] = val;
        
        if(menor > val){
            menor = val;
            j = cont;
        }
    }
    printf("Menor valor: %d\n", menor);
    printf("Posicao: %d\n", j);
    
return 0;   
}
