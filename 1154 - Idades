#include <stdio.h>
 
int main(){
    int idade, soma = 0, quantidade = 0;
    float media;
    while(1){
        scanf("%d", &idade);
        if(idade < 0)break;
            quantidade++;
            soma += idade;
    }
    media = soma / (float)quantidade;
    printf("%.2f\n", media);

return 0;
}
